@model IEnumerable<TripsProject.Models.ViewModel.MyOrderRowVM>
@{
    ViewData["Title"] = "My Orders";
}

<h1>My Orders</h1>

<input type="text" id="searchBox"
       placeholder="Search by destination / country / status / orderId / packageId..."
       class="form-control mb-3" />

<div id="ordersTable">
    <partial name="_MyOrdersTable" model="Model" />
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        function filterMyOrders() {
            $.get('@Url.Action("MyOrdersSearch","UserOrders")', {
                query: $('#searchBox').val()
            }, function (html) {
                $('#ordersTable').html(html);
            });
        }

        $('#searchBox').on('keyup', filterMyOrders);
    </script>
}

<style>
    h1 { margin: 20px 0; }
    table { width: 100%; background: #fff; border-radius: 12px; overflow: hidden; }
    th, td { padding: 12px; border-bottom: 1px solid #e5e7eb; }
    th { background: #f9fafb; text-align: left; }
    .badge {
        padding: 6px 10px;
        border-radius: 999px;
        font-weight: 700;
        font-size: 12px;
        display: inline-block;
    }
    .paid { background: #dcfce7; color: #166534; }
    .pending { background: #fef9c3; color: #854d0e; }
    .cancelled { background: #fee2e2; color: #991b1b; }
</style>