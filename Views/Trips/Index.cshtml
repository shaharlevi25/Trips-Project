        width: 100%;
        border: 2px solid #f6b400;
        border-radius: 14px;
        overflow: hidden;
        background: #fff;
        gap: 0; /* חשוב: שלא יהיו רווחים */
    }

    .ta-search__field{
        display: flex;
        align-items: center;
        gap: 10px;
        padding: 10px 12px;
        min-height: 56px;
        border-left: 1px solid rgba(0,0,0,.12); /* מפריד בין עמודות */
        background: #fff;
    }

    /* השדה הראשון בלי מפריד משמאל */
    .ta-search__field:first-child{
        border-left: none;
    }

    .ta-search__icon{
        flex: 0 0 auto;
        opacity: .85;
    }

    .ta-search__input{
        width: 100%;
        border: none;
        outline: none;
        background: transparent;
    }

    .ta-search__field--dates{
        display: flex;
        align-items: stretch;  /* חשוב: שימתח לגובה */
    }
    .ta-search__field--dates .ta-search__input{
        min-width: 140px;
    }

    .ta-search__dash{
        opacity: .6;
        flex: 0 0 auto;
    }

    .ta-search__field--people{
        gap: 10px;
    }
    .ta-search__select{
        border: none;
        outline: none;
        background: transparent;
        min-width: 90px;
    }

    .ta-search__field--right{
        justify-content: space-between;
        gap: 10px;
    }

    .ta-search__check{
        display:flex;
        align-items:center;
        gap:8px;
        margin:0;
        user-select:none;
        font-size:14px;
    }
    .ta-search__check input{ margin:0; }

    .ta-search__clear{
        text-decoration:none;
        font-weight:700;
        color:#0d6efd;
        padding:6px 10px;
        border-radius:8px;
        white-space: nowrap;
    }
    .ta-search__clear:hover{
        background:rgba(13,110,253,.08);
    }

    /* הכפתור כחלק מה-grid (עמודה אחרונה) */
    .ta-search__btn{
        height: 100%;
        border: none;
        background: #0d6efd;
        color: #fff;
        font-weight: 800;
        cursor: pointer;
        padding: 0 18px;
    }
    .ta-search__btn:hover{ filter: brightness(.95); }

    .ta-search__sep{ display:none; }


    .badge-bg-primary

    .small-field{
        flex:0 0 auto;
        min-width:220px;
        justify-content:space-between;
    }

    .clear-link{
        text-decoration:none;
        font-weight:600;
        opacity:.8;
    }
    .clear-link:hover{ opacity:1; }

    .country-box{
        border: 1px solid rgba(0,0,0,.12);
        border-radius: 16px;
        padding: 14px;
        background: #fff;
    }

    .scroll-track{
        display: flex;
        gap: 16px;
        overflow-x: auto;
        overflow-y: hidden;
        padding-bottom: 8px;
        scroll-snap-type: x mandatory;
        -webkit-overflow-scrolling: touch;
    }

    .trip-item{
        flex: 0 0 320px;
        scroll-snap-align: start;
    }

    .type-badge-wrap{
        padding: 10px 12px 0 12px;
        color:white;
    }

    .ta-search__field--dates{
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .date-overlay{
        flex: 1 1 0;
        min-width: 170px;
        padding: 6px 10px;
        border-radius: 10px;
        cursor: pointer;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .date-overlay:hover{
        background: rgba(13,110,253,.04);
    }

    .date-label{
        font-size: 11px;
        font-weight: 700;
        color: #6c757d;
        line-height: 1.1;
    }

    .date-value{
        font-size: 14px;
        color: #212529;
        line-height: 1.2;
    }

    .ta-search__field--dates input[type="date"]{
        position: absolute;
        left: -9999px;
        width: 1px;
        height: 1px;
        opacity: 0;
    }





</style>
