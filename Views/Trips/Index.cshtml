@model List<TripsProject.Models.TravelPackage>

<script>
    function updateDateText(input, key){
        const valueSpan = document.querySelector(`.date-value[data-target="${key}"]`);
        if (!input.value) {
            valueSpan.textContent = "Select date";
            return;
        }

        const d = new Date(input.value);
        const formatted =
            String(d.getDate()).padStart(2,'0') + "." +
            String(d.getMonth()+1).padStart(2,'0') + "." +
            d.getFullYear();

        valueSpan.textContent = formatted;
    }
</script>

@functions {
string GetCityImage(string city)
{
if (string.IsNullOrEmpty(city))
return Url.Content("~/images/trips/placeholder.jpg");

city = city.Trim().ToLower();

return city switch
{
"barcelona" => Url.Content("~/images/trips/barcelona.jpg"),
"dubai" => Url.Content("~/images/trips/dubai.jpg"),
"bucharest" => Url.Content("~/images/trips/bucharest.jpg"),
"budapest" => Url.Content("~/images/trips/budapest.jpg"),
"copenhagen" => Url.Content("~/images/trips/copenhagen.jpg"),
"london" => Url.Content("~/images/trips/london.jpg"),
"miami" => Url.Content("~/images/trips/miami.jpg"),
"phuket" => Url.Content("~/images/trips/phuket.jpg"),
_ => Url.Content("~/images/trips/placeholder.jpg")
};
}
}

@{
ViewData["Title"] = "All Packages";

var byType = (Model ?? new List<TripsProject.Models.TravelPackage>())
.GroupBy(p => p.PackageType ?? "Unknown")
.OrderBy(g => g.Key);
}

<div class="container mt-4">

    <h2 class="mb-4 fw-bold text-center">Find your trip</h2>

    <div class="search-header">
        <h3 class="Searching Function Title m-0">Want to search by Yourself?</h3>
        <div class="now-on-site">
            Now on site: @ViewBag.TotalTrips trips • @ViewBag.TotalAmount seats
        </div>
    </div>

    <form method="get" class="ta-search" dir="ltr">

        <div class="ta-search__field">
            <span class="ta-search__icon">📍</span>
            <input name="destination"
                   class="ta-search__input"
                   placeholder="To where?"
                   value="@(ViewBag.Destination ?? "")" />
        </div>

        <div class="ta-search__sep"></div>

        <div class="ta-search__field ta-search__field--dates">
            <span class="ta-search__icon">📅</span>

            <div class="date-overlay">
                <span class="date-label">Arrival date</span>
                <span class="date-value" data-target="start">Select date</span>

                <input class="date-hit"
                       type="date"
                       name="start"
                       value="@(ViewBag.Start ?? "")"
                       onchange="updateDateText(this,'start')" />
            </div>

            <div class="date-overlay">
                <span class="date-label">Departure date</span>
                <span class="date-value" data-target="end">Select date</span>

                <input class="date-hit"
                       id="endDate"
                       type="date"
                       name="end"
                       value="@(ViewBag.End ?? "")"
                       onchange="updateDateText(this, 'end')" />
            </div>
        </div>


        <div class="ta-search__sep"></div>

        <div class="ta-search__field ta-search__field--people">
            <span class="ta-search__icon">👤</span>

            <select name="adults" class="ta-search__select">
                @{
                int adults = ViewBag.Adults ?? -1;
                }
                <option value="-1" selected="@(adults == -1)">Adults (Any)</option>
                @for (int i = 1; i <= 6; i++)
                {
                <option value="@i" selected="@(i == adults)">@i Adult@(i == 1 ? "" : "s")</option>
                }
            </select>

            <select name="children" class="ta-search__select">
                @{
                    int children = ViewBag.Children ?? -1;
                }
                <option value="-1" selected="@(children == -1)">Children (Any)</option>
                @for (int i = 1; i <= 6; i++)
                {
                    <option value="@i" selected="@(i == children)">@i Children@(i == 1 ? "" : "s")</option>
                }
            </select>
            
        </div>

        <div class="ta-search__sep"></div>

        <div class="ta-search__field ta-search__field--right">
            <span class="ta-search__icon">🏷️</span>

            <select name="packageType" class="ta-search__select">
                @{
                string selectedType = ViewBag.PackageType ?? "";
                }

                <option value="" selected="@(string.IsNullOrEmpty(selectedType))">
                    Trip Type (Any)
                </option>

                <option value="LUXURY"     selected="@(selectedType == "LUXURY")">Luxury</option>
                <option value="ADVENTURE"  selected="@(selectedType == "ADVENTURE")">Adventure</option>
                <option value="FAMILY"     selected="@(selectedType == "FAMILY")">Family</option>
                <option value="ROMANTIC"   selected="@(selectedType == "ROMANTIC")">Romantic</option>
                <option value="CULTURAL"   selected="@(selectedType == "CULTURAL")">Cultural</option>
                <option value="BUSINESS"   selected="@(selectedType == "BUSINESS")">Business</option>
                <option value="HONEYMOON"  selected="@(selectedType == "HONEYMOON")">Honeymoon</option>
                <option value="VACATION"   selected="@(selectedType == "VACATION")">Vacation</option>
            </select>

            <a class="ta-search__clear" href="/Trips">Clean</a>
        </div>

        <input type="hidden" name="searched" value="true" />
        <button type="submit" class="ta-search__btn">Search</button>

        @* Filters / Sorting *@
        <div class="ta-filters">
            @{
            string sort = ViewBag.Sort ?? "";
            string maxPrice = ViewBag.MaxPrice ?? "";
            bool discountOnly = ViewBag.DiscountOnly ?? false;
            }

            <div class="ta-filter">
                <span class="ta-filter__label">Sort</span>
                <select name="sort" class="ta-filter__control">
                    <option value="" selected="@(string.IsNullOrEmpty(sort))">Default</option>
                    <option value="price_asc" selected="@(sort == "price_asc")">Price: Low → High</option>
                    <option value="price_desc" selected="@(sort == "price_desc")">Price: High → Low</option>
                </select>
            </div>

            <div class="ta-filter">
                <span class="ta-filter__label">Max price (₪)</span>
                <input type="number"
                       name="maxPrice"
                       class="ta-filter__control"
                       min="0"
                       step="1"
                       placeholder="Any"
                       value="@maxPrice" />
            </div>

            <label class="ta-filter ta-filter--check">
                <input type="checkbox" name="discountOnly" value="true" @(discountOnly ? "checked" : "") />
                <span>Discount only</span>
            </label>
            
            <div class="ta-search__field ta-search__field--text ta-filter__search">
                <span class="ta-search__icon">🔍</span>
                <input type="text"
                       name="q"
                       class="ta-search__input"
                       placeholder="What Kind of Trip?"
                       value="@(ViewBag.Q ?? "")" />
            </div>
        </div>
    </form>

    @if (!Model?.Any() ?? true)
    {
    <div class="alert alert-info">There are no packages to that correct your details.</div>
    }
    else
    {
    @foreach (var countryGroup in byType)
    {
    <div class="country-section mb-5">

        <div class="d-flex align-items-center gap-3 mb-3">
            <h3 class="fw-bold m-0">@countryGroup.Key</h3>
            <span class="text-muted">(@countryGroup.Count() Packages)</span>
            <hr class="flex-grow-1 m-0" />
        </div>

            <div class="country-box mb-4">
                <div class="scroll-track" dir="ltr">

                    @{
                    // Sorting inside each group (view-level), default = by date
                    string sort = ViewBag.Sort ?? "";
                    var orderedGroup = sort == "price_asc"
                    ? countryGroup.OrderBy(x => (x.DiscountedPrice ?? x.Price))
                    : sort == "price_desc"
                    ? countryGroup.OrderByDescending(x => (x.DiscountedPrice ?? x.Price))
                    : countryGroup.OrderBy(x => x.StartDate);
                    }

                    @foreach (var p in orderedGroup)
                    { if (p.EndDate.Date < DateTime.Today)
                        {
                            continue; 
                        }
                    var start = p.StartDate < p.EndDate ? p.StartDate : p.EndDate;
                    var end = p.StartDate < p.EndDate ? p.EndDate : p.StartDate;

                    <div class="trip-item">
                        <div class="card trip-card h-100 shadow-sm @(p.IsAvailable ? "" : "trip-card--unavailable")">

                            <div class="type-badge-wrap">
                                <span class="badge bg-primary">@p.PackageType</span>
                            </div>

                            <img src="@GetCityImage(p.Destination)"
                                 class="card-img-top trip-img"
                                 alt="@p.Destination"
                                 onerror="this.onerror=null; this.src='@Url.Content("~/images/trips/placeholder.jpg")';" />

                            <div class="card-body d-flex flex-column">
                                <h5 class="fw-bold mb-1">@p.Destination</h5>

                                <div class="text-muted small mb-2">
                                    @start.ToString("dd/MM/yyyy") - @end.ToString("dd/MM/yyyy")
                                </div>

                                <div class="d-flex gap-2 mb-2">
                                    @if (!p.IsAvailable)
                                    {
                                    <span class="badge bg-secondary">Unavailable</span>
                                    }
                                    @if (p.AgeLimit != null)
                                    {
                                    <span class="badge bg-warning text-dark">@p.AgeLimit+ Age:</span>
                                    }
                                </div>

                                <p class="text-muted trip-desc mb-3">@p.Description</p>

                                <div class="mt-auto">
                                    @if (p.DiscountedPrice != null)
                                    {
                                    <div class="price-wrap">
                                        <span class="old-price">₪@p.Price</span>
                                        <span class="new-price">₪@p.DiscountedPrice</span>
                                        <span class="discount-badge">-@p.DiscountPercent%</span>
                                    </div>
                                    }
                                    else
                                    {
                                    <div class="fw-bold text-success mb-2">₪@p.Price</div>
                                    }

                                    <a asp-controller="TravelPackages"
                                       asp-action="Details"
                                       asp-route-id="@p.PackageId"
                                       class="btn btn-outline-primary w-100">
                                        Details
                                    </a>
                                    

                                    @if (!p.IsAvailable)
                                    {
                                    <div class="text-muted small mt-1">This package is currently unavailable</div>
                                    }
                                </div>
                            </div>

                        </div>
                    </div>
                    }

                </div>
            </div>

        </div>
    }
    }
</div>
