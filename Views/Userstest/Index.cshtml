@model IEnumerable<TripsProject.Models.User>

<link rel="stylesheet" href="~/css/packages.css" />

<h1>Users Management</h1>
<a asp-action="Create" class="btn btn-primary">+ Add User</a>
<br /><br />
<input type="text" id="searchBox" placeholder="Search by Email or Name..." class="form-control mb-3" />

<table id="usersTable">
    <thead>
        <tr>
            <th>Email</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Phone Number</th>
            <th>Role</th>
            <th>Active</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody id="usersBody">
        @foreach (var u in Model)
        {
            <tr>
                <td>@u.Email</td>
                <td>@u.FirstName</td>
                <td>@u.LastName</td>
                <td>@u.PhoneNumber</td>
                <td>@u.Role</td>
                <td>@(u.IsActive ? "Yes" : "No")</td>
                <td>
                    <a asp-action="Edit" asp-route-email="@u.Email" class="btn btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-email="@u.Email" class="btn btn-danger" 
                       onclick="return confirm('Are you sure you want to delete this user?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts{
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function(){
            $("#searchBox").on("keyup", function(){
                var query = $(this).val();
                $.ajax({
                    url: '@Url.Action("Search", "UsersTest")',
                    type: 'GET',
                    data: { query: query },
                    success: function(users){
                        var tbody = "";
                        $.each(users, function(i, u){
                            tbody += "<tr>";
                            tbody += "<td>" + u.email + "</td>";
                            tbody += "<td>" + u.firstName + "</td>";
                            tbody += "<td>" + u.lastName + "</td>";
                            tbody += "<td>" + u.phoneNumber + "</td>";
                            tbody += "<td>" + u.role + "</td>";
                            tbody += "<td>" + (u.isActive ? "Yes" : "No") + "</td>";
                            tbody += "<td>";
                            tbody += "<a href='/UsersTest/Edit?email=" + u.email + "' class='btn btn-primary'>Edit</a> ";
                            tbody += "<a href='/UsersTest/Delete?email=" + u.email + "' class='btn btn-danger' onclick='return confirm(\"Are you sure?\");'>Delete</a>";
                            tbody += "</td>";
                            tbody += "</tr>";
                        });
                        $("#usersBody").html(tbody);
                    }
                });
            });
        });
    </script>
    
}
