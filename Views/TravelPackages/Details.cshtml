@model TripsProject.Models.TravelPackage

@{
    ViewData["Title"] = "פרטי חבילה";
}

<div class="container mt-5" style="max-width:800px;">
    <div class="card shadow-lg p-4">
        <h2 class="text-center mb-3">@Model.Destination (@Model.Country)</h2>

        <p class="text-center text-muted mb-0">
            @Model.StartDate.ToString("dd/MM/yyyy") - @Model.EndDate.ToString("dd/MM/yyyy")
        </p>

        <hr />

        <div class="row mb-3">
            <div class="col-md-6"><strong>סוג חבילה:</strong> @Model.PackageType</div>
            <div class="col-md-6"><strong>חדרים:</strong> @Model.NumOfRooms</div>
        </div>

        <p><strong>מחיר:</strong> <span class="fs-4 text-success">₪@Model.Price</span></p>

        @if (Model.AgeLimit != null)
        {
            <p><strong>הגבלת גיל:</strong> @Model.AgeLimit+</p>
        }

        <hr />

        <p class="fw-bold mb-1">תיאור:</p>
        <p>@Model.Description</p>

        <a asp-controller="Trips"
           asp-action="Index"
           class="btn btn-outline-secondary mt-3">
            חזרה לכל החבילות
        </a>
    </div>
</div>