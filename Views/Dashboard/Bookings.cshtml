@model List<TripsProject.Models.Booking>

<div class="container mt-5">
    <h2 class="mb-4">My Bookings</h2>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">No bookings found.</div>
    }
    else
    {   
        @if (TempData["Msg"] != null)
        {
            <div class="alert alert-info">@TempData["Msg"]</div>
        }

        <table class="table table-striped table-bordered">
            <thead>
            <tr>
                <th>Package Id</th>
                <th>Created at</th>
                <th>Rooms Booked</th>
                <th>Total Price</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var b in Model)
            {
                <tr>
                    <td>@b.PackageId</td>
                    <td>@b.CreatedAt.ToString("dd/MM/yyyy")</td>
                    <td>@b.RoomsBooked</td>
                    <td>₪@b.TotalAmount</td>
                    <td>@b.Status</td>
                    <form asp-controller="Bookings" asp-action="Cancel" method="post"
                          onsubmit="return confirm('לבטל את ההזמנה?');">
                        <input type="hidden" name="bookingId" value="@b.BookingId" />
                        <button type="submit" class="btn btn-danger btn-sm">Cancel</button>
                    </form>

                </tr>
            }
            </tbody>
        </table>
    }
</div>