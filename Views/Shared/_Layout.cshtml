@using Microsoft.AspNetCore.Http

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>@ViewData["Title"] - Travel Agency</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />

    <!-- Flatpickr -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">

    <!-- Site CSS -->
    <link rel="stylesheet" href="~/css/site.css" />

    @RenderSection("Styles", required: false)
</head>

<body>

<!-- ================= NAVBAR ================= -->
<nav class="navbar navbar-expand-lg bg-white shadow-sm main-navbar">
    <div class="container">

        <!-- LOGO -->
        <a class="navbar-brand d-flex align-items-center gap-2" href="/">
            <img src="/images/LOGO_TRIPSPROJECT.png" class="logo-img" />
            <span class="fw-bold">Travel Agency</span>
        </a>
        <!-- NAV LINKS -->
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto align-items-center gap-2">

                <!-- Pages -->
                <li class="nav-item">
                    <a class="nav-link" href="/">Home</a>
                </li>
                
                <li class="nav-item">
                    <a class="nav-link" href="/HomePage/Privacy">Policies</a>
                </li>
                
                <li class="nav-item">
                    <a class="nav-link" asp-controller="SiteReviews" asp-action="Index">
                        Reviews
                    </a>
                </li>
                

                <!-- Divider -->
                <li class="nav-item">
                    <span class="nav-link text-muted px-1">|</span>
                </li>

                @if (User.Identity != null && User.Identity.IsAuthenticated)
                {
                    <li class="nav-item">
                        <span class="nav-link fw-bold text-primary">
                            Hello @(User.Identity.Name?.Split('@')[0])!
                        </span>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link nav-cart d-flex align-items-center gap-1 position-relative"
                           href="#"
                           data-bs-toggle="modal"
                           data-bs-target="#cartModal">
                            <span>🛒</span>
                            <span>Cart</span>
                            <span id="cart-count"
                                  class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger"
                                  style="display:none">
                                0
                            </span>
                        </a>
                    </li>

                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/Admin/Dashboard">Admin</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/Dashboard/User">My Dashboard</a>
                        </li>
                    }

                    <li class="nav-item">
                        <a class="nav-link text-danger" href="/User/Logout">
                            Logout
                        </a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <span class="nav-link fw-bold text-primary">
                            Hello Guest!
                        </span>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="/User/Login">Login</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="/User/Register">Register</a>
                    </li>
                }
            </ul>
        </div>
    </div>
</nav>

<!-- ================= PAGE CONTENT ================= -->
<main class="container-fluid p-0">
    @RenderBody()
</main>

<!-- ================= FOOTER ================= -->
<footer class="mt-5 p-4 text-center bg-light">
    © 2025 Travel Agency · All rights reserved
</footer>

<!-- ================= SCRIPTS ================= -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>

<script>
    flatpickr(".ta-date", {
        dateFormat: "d/m/Y",
        minDate: "today",
        allowInput: true
    });
</script>


<!-- ================= CART MODAL ================= -->
<div class="modal fade" id="cartModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">Your Cart</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                <ul id="cart-items" class="list-group"></ul>
            </div>

            <div class="modal-footer d-flex justify-content-between align-items-center">
                <div class="fw-bold fs-5">
                    Total: ₪<span id="cart-total">0</span>
                </div>

                <div class="d-flex gap-2">
                    <button class="btn btn-outline-secondary" data-bs-dismiss="modal">
                        Continue Browsing
                    </button>
                    <button type="button" class="btn btn-primary" id="checkoutBtn">
                        Checkout
                    </button>
                </div>
            </div>

        </div>
    </div>
</div>

@RenderSection("Scripts", required: false)

<script>
function loadCart() {
    fetch('/Cart/Items')
        .then(r => r.json())
        .then(items => {
            const ul = document.getElementById('cart-items');
            ul.innerHTML = '';

            if (!items || items.length === 0) {
                ul.innerHTML = '<li class="list-group-item text-muted">Cart is empty</li>';
                return;
            }

            items.forEach(i => {
                ul.innerHTML += `
    <li class="list-group-item d-flex justify-content-between align-items-center">
        <div>
            <strong>${i.title}</strong><br>
            <small>
                ${new Date(i.startDate).toLocaleDateString()} -
                ${new Date(i.endDate).toLocaleDateString()}
            </small>
        </div>
        <div class="d-flex align-items-center gap-2">
            <span class="fw-bold">₪${i.price}</span>
            <button class="btn btn-sm btn-outline-danger"
                    onclick="removeFromCart(${i.packageId})">
                ✖
            </button>
        </div>
    </li>`;
            });
            loadCartTotal();
        });
}
</script>
<script>
function loadCartCount() {
    fetch('/Cart/Count')
        .then(r => r.json())
        .then(d => {
            const badge = document.getElementById('cart-count');
            if (!badge) return;

            if (d.count > 0) {
                badge.textContent = d.count;
                badge.style.display = 'inline-block';
            } else {
                badge.style.display = 'none';
            }
        });
}
</script>
<script>
function removeFromCart(packageId) {
    fetch('/Cart/Remove', {
        method: 'POST',
        headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
        body: 'packageId=' + packageId
    })
    .then(r => r.json())
    .then(() => {
        loadCart();
        loadCartCount();
        loadCartTotal();
    });
}
</script>
<script>
function loadCartTotal() {
    fetch('/Cart/Total')
        .then(r => r.json())
        .then(d => {
            const el = document.getElementById('cart-total');
            if (el) el.textContent = d.total;
        });
}
</script>
<script>
    document.getElementById('cartModal')
        ?.addEventListener('shown.bs.modal', function () {
            loadCart();
        });
</script>
<script>
document.addEventListener('DOMContentLoaded', function () {
    loadCartCount();
});
</script>
</body>
</html>