@section Scripts {
<script src="https://www.paypal.com/sdk/js?client-id=YOUR_CLIENT_ID&currency=ILS"></script>

<script>
    const packageId = @Model.PackageId;

    paypal.Buttons({
        style: { layout: 'vertical', color: 'blue', shape: 'pill', label: 'paypal' },

        // createOrder ×“×¨×š ×”×©×¨×ª
        createOrder: async function () {
            const res = await fetch('/Payment/CreateOrder', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ packageId })
            });

            const data = await res.json();
            return data.orderId;
        },

        // approve -> Capture ×“×¨×š ×”×©×¨×ª -> INSERT Orders
        onApprove: async function (data) {
            const res = await fetch('/Payment/Capture', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ orderId: data.orderID })
            });

            if (res.ok) {
                window.location.href = '/Payment/Success';
            } else {
                alert("Payment error: " + await res.text());
            }
        },

        onCancel: function () {
            window.location.href = '/Payment/Cancel';
        }

    }).render('#paypal-button-container');
</script>

