@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero Section -->
<div class="text-center p-5" style="background:#0A4275; color:white; border-radius:10px;">
    <h1 class="display-4 fw-bold">ברוכים הבאים לפרויקט 2026</h1>
    <p class="lead mt-2">#התחלנו מה שנקרא 🚀</p>
</div>

<!-- Content Cards -->
<div class="container mt-5">
    <div class="row justify-content-center">

        <!-- Register Card -->
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm" style="border-radius:15px;">
                <div class="card-body text-center">
                    <h3 class="fw-bold">הרשמה</h3>
                    <p>צור משתמש חדש במערכת</p>
                    <a href="/User/Register" class="btn btn-primary w-100">עבור להרשמה</a>
                </div>
            </div>
        </div>

        <!-- Login Card -->
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm" style="border-radius:15px;">
                <div class="card-body text-center">
                    <h3 class="fw-bold">התחברות</h3>
                    <p>כנס למערכת עם המשתמש שלך</p>
                    <a href="/User/Login" class="btn btn-success w-100">עבור להתחברות</a>
                </div>
            </div>
        </div>

        <!-- Users List Card -->
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm" style="border-radius:15px;">
                <div class="card-body text-center">
                    <h3 class="fw-bold">רשימת משתמשים</h3>
                    <p>הצגת כל המשתמשים שנשמרו בדאטה בייס</p>
                    <a href="/User/AllUsers" class="btn btn-secondary w-100">הצג משתמשים</a>
                </div>
            </div>
        </div>

    </div>
</div>