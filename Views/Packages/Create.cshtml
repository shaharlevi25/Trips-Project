@model TripsProject.Models.Package

@{
    ViewData["Title"] = "Add New Travel Package";
}

<link rel="stylesheet" href="~/css/admin.css" />

<h1>Add New Travel Package</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Destination"></label>
        <input asp-for="Destination" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Country"></label>
        <input asp-for="Country" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="StartDate"></label>
        <input asp-for="StartDate" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="EndDate"></label>
        <input asp-for="EndDate" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" type="number" step="0.01" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="NumOfRooms"></label>
        <input asp-for="NumOfRooms" type="number" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="PackageType"></label>
        <select asp-for="PackageType" class="form-control">
            <option>Vacation</option>
            <option>Adventure</option>
            <option>Family</option>
            <option>Romantic</option>
            <option>Luxury</option>
            <option>Cultural</option>
            <option>Honeymoon</option>
            <option>Business</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="AgeLimit"></label>
        <input asp-for="AgeLimit" type="number" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="IsAvailable"></label>
        <input asp-for="IsAvailable" type="checkbox" />
    </div>

    <button type="submit" class="btn btn-success">Save Package</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
